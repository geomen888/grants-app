# Use Node.js image as base for backend seeder
FROM node:20.17-slim

# Set the working directory inside the container
WORKDIR /usr/src/app

# Copy the package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the entire backend source code
COPY . .

# Build the NestJS app (includes building the seeder script)
RUN npm run build

# Command to run the seed script
CMD ["node", "dist/postgres/seeder/seeder.js", "--limit", "50"]